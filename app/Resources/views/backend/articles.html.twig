{% extends 'backend/layout.html.twig' %}

{% block wrapper %}
    <div class="wrapper">

        {%include 'backend/header.html.twig' %}

        {%include 'backend/sidebar.html.twig' %}

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Админ
                    <small>панель</small>
                </h1>
            </section>

            <section class="content">

                <div class="box box-primary">
                    <div class="box-header">
                        <i class="ion ion-clipboard"></i>

                        <h3 class="box-title">Список всех статей</h3>

                        <div class="box-tools pull-right">
                            <ul class="pagination pagination-sm inline">
                                <li><a href="#">&laquo;</a></li>
                                <li><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">&raquo;</a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <ul class="todo-list">
                            {% for article in articles %}
                                <li>
                                    <span class="text">{{ article['a_name'] }}</span>
                                    <small class="label label-info"><i class="fa fa-clock-o"></i> {{ article['a_createdAt'] }}</small>
                                    <div class="tools">
                                        <a href="/backend/new_article/{{ article['a_id'] }}"><i class="fa fa-edit"></i></a>
                                        <a href="/backend/delete_article/{{ article['a_id'] }}"><i class="fa fa-trash-o"></i></a>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                    <div class="box-footer clearfix no-border">
                        <a href="{{ path('backend_newArticle') }}" type="button" class="btn btn-default pull-right">
                            <i class="fa fa-plus"></i> Добавить статью
                        </a>
                    </div>
                </div>
            </section>
        </div>
        </section>
    </div>
{% endblock %}